modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_05"
packages = ["cairo", "ffmpeg-full", "file", "fontconfig", "freetype", "ghostscript", "glib", "glibcLocales", "gobject-introspection", "gtk3", "harfbuzz", "libxcrypt", "pango", "pkg-config", "qhull", "tcl", "tk"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AutoML Backend Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AutoML Frontend"

[[workflows.workflow]]
name = "AutoML Backend Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install fastapi uvicorn pandas numpy scikit-learn xgboost matplotlib seaborn plotly jinja2 weasyprint python-magic pydantic pydantic-settings python-multipart joblib && python main.py"
waitForPort = 5000

[[workflows.workflow]]
name = "AutoML Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install && npm start"
waitForPort = 3000

[[ports]]
localPort = 5000
externalPort = 80
